@model DamacanaWeb.Models.Product
<h2>Add New Potion</h2>

@using (Html.BeginForm("SaveProduct", "Home", FormMethod.Post))
{
    <div class="form-group">
        <label for="exampleInputEmail1">Name</label>
        <input class="form-control" id="Name" placeholder="Enter Potion">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Price</label>
        <input class="form-control" id="Price" value="0">
    </div>

    <button type="submit" class="btn btn-default">Submit</button>
}





