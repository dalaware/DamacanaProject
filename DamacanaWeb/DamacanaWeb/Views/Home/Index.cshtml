@using DamacanaWeb.Models
@model List<DamacanaWeb.Models.Product>
@{
    ViewBag.Title = "Home Page";
}

<h2>Add New Potion</h2>

@using (Html.BeginForm("AddProduct", "Home", FormMethod.Post))
{
    <div class="form-group">
        <label for="exampleInputEmail1">Name</label>
        <input class="form-control" id="Name" placeholder="Enter Potion">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Price</label>
        <input class="form-control" id="Price" value="0">
    </div>

    <button type="submit" class="btn btn-default">Submit</button>
}


@foreach (Product p in Model)   
{
    <h2>
        @p.Name (@p.Id)
    </h2>
    <p>
        @p.Price
    </p>
    <hr />
}

